<div class="row vertical-align">
  <div class="col-xs-12 col-sm-8">
	<img class="center-block welcome-img" src="{{current_url}}/images/welcome.png" alt="Welcome to DP Knowledge Base">
  </div>

  <div class="col-xs-12 col-sm-4">
    <div class="welcome-panel center-block">

      <div class="row welcome-panel-heading">
          <div class="col-xs-6">
            <a href="#" class="active" id="login-form-link">Login</a>
          </div>
          <div class="col-xs-6">
            <a href="#" id="register-form-link">Register</a>
          </div>
      </div>

      <div class="welcome-panel-body">
        <div class="row">
          <div class="col-lg-12">

            <form method="post" id="login-form" action="{{app_context}}/customer_login" data-toggle="validator" style="display: block">
              <div class="form-group">
                <input type="email" class="form-control" name="customers_email" value="{{customer.customers_email}}" placeholder="Email Address" required>
              </div>
              <div class="form-group">
                <div class="pull-right">
                  <button type="submit" class="btn btn-default">{{__ "Login"}}</button>
                </div>
              </div>
            </form>

            <form method="post" id="register-form" action="{{app_context}}/customer_insert" data-toggle="validator" style="display: none">
              <div class="form-group">
                <input type="text" class="form-control" name="customers_name" value="{{customer.customers_name}}" placeholder="Name" required>
              </div>
              <div class="form-group">
                <input type="text" class="form-control" name="customers_company" value="{{customer.customers_company}}" placeholder="Company" required>
              </div>
              <div class="form-group">
                <input type="email" class="form-control" name="customers_email" value="{{customer.customers_email}}" placeholder="Email Address" required>
              </div>
              <div class="form-group">
                <select class="form-control" id="sysType" onclick="sysSel()" name="customers_sysType" value="{{customer.customers_sysType}}" placeholder="System Type" required>
                  <option hidden selected>{{__ "System Type"}}</option>
                  <option>{{__ "DP900"}}</option>
                  <option>{{__ "DP700"}}</option>
                  <option>{{__ "DP200"}}</option>
                  <option>{{__ "Other"}}</option>
                </select>
              </div>
              <div class="form-group">
                <input id="sysNum" type="number" class="form-control" name="customers_SN" value="{{customer.customers_SN}}" placeholder="System #" readonly required>
              </div>
              <div class="form-group">
                <div class="pull-right">
                  <button type="submit" class="btn btn-default">{{__ "Register"}}</button>
                </div>
              </div>
            </form>

          </div>

        </div>
      </div>
    </div>

  </div>
</div>
